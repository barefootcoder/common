#! /bin/bash
. ~/bin/bash_funcs

function USAGE
{
	cat <<EOM

usage: $me [--work] [--alarm | --sleep]

    --alarm         : start at medium-loud volume and increase
                      (default: start at low volume and increase)
    --sleep         : play sleep playlist at low volume
                      (default: play wake playlist)
    --work          : play even when at work
                      (exit immediately when at work)
    --help          : this help message

EOM
}

mode=wake
play_at_work=false
while [ $# -gt 0 ]
do
	case $1 in
		--alarm)		mode=alarm
						shift
						;;
		--sleep)		mode=sleep
						shift
						;;
		--work)			play_at_work=true
						shift
						;;
		--help|-h|-\?)	USAGE
						exit
						;;
		*)              usage_error "Unrecognized option: $1"
						;;
	esac
done



if [[ $(get_location) == "work" ]] && ! $play_at_work
then
	die "will not play music at work"
fi

case $mode in
	wake)	volume=1
			;;
	sleep)	volume=2
			;;
	alarm)	volume=22
			;;
esac

playlist=/home/buddy/Dropbox/music/tracklists/misc/5minutes.m3u
if [[ $mode == "sleep" ]]
then
	playlist=/home/buddy/Dropbox/music/tracklists/Merrick/'Numeric Driftwood.m3u'
fi

~/bin/decibel-volume set $volume
python /usr/share/decibel-audio-player/src/remote.py pl-set "$playlist"
[[ $mode == "sleep" ]] && exit
for i in {1..9}
do
    sleep 300
	for j in $(seq 1 $(( ($i + 1) / 2 )) )
	do
		~/bin/decibel-volume up
	done
done
