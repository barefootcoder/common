#!/bin/bash

while [[ $1 == -* ]]
do
	opts="$opts $1"
	shift 1
done

pattern="$1"
shift 1
for who in $@
do
	files="$files ~/.purple/logs/*/*/*$who*/*"
done
eval grep $opts -Pie "$pattern" $files																						\
		| perl -lpe 's{^/(.+?/){6}}{};s{^(.*?)@.*?(/.*?:)}{$1$2};s{\.\d{6}-\d{4}P[SD]T\.txt:}{:};s{^%2b1}{+}'
