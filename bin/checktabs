#!/bin/bash

. ~/bin/bash_funcs

while getopts ":nh" opt
do
	case $opt in
		n)	files=$(git status -s | awk '{print $2}')
			;;
		h)  echo "usage: $me -h | [-n] [dir]" >&2
			echo "    -n : only check for tabs in Git modified files" >&2
			echo "    -h : this help message" >&2
			echo "    dir : directory to search (default [w/o -n]: .)" >&2
			exit
			;;
		:)  bad_arg "$OPTARG requires an argument"
			;;
		\?) bad_arg "unknown argument $OPTARG"
			;;
	esac
done
shift $(( $OPTIND - 1 ))

if [[ -z $files ]]
then
	if [[ -z $1 ]]
	then
		files="*"
	else
		if [[ -d $1 ]]
		then
			files="$1/*"
		else
			die "$1 not a directory"
		fi
	fi
fi

fgrep -rcI '	' $files | grep -v ':0$'
