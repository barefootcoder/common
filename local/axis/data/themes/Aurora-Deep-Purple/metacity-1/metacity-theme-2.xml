<!-- Window Borders -->

	<draw_ops name="corners_rounded_top">


		<!-- left Corner -->
		<line color="BorderDark" x1="1" y1="2" x2="1" y2="4"/>
		<line color="BorderDarker" x1="3" y1="1" x2="4" y2="1"/>
		<line color="BorderDarker" x1="2" y1="2" x2="2" y2="2"/> 

		<!-- Right Corner -->
		<line color="BorderDark" x1="width - 2" y1="2" x2="width - 2" y2="4"/>
		<line color="BorderDarker" x1="width - 4" y1="1" x2="width - 5" y2="1"/>
		<line color="BorderDarker" x1="width - 3" y1="2" x2="width - 3" y2="2"/>


	</draw_ops>

	<draw_ops name="corners_rounded_bottom">

		<!-- left Corner -->
		<line color="Border" x1="1" y1="height-5" x2="1" y2="height-4"/>
		<line color="Border" x1="2" y1="height-3" x2="2" y2="height-3"/>
		<line color="Border" x1="3" y1="height-2" x2="4" y2="height-2"/>

		<!-- Right Corner -->
		<line color="Border" x1="width - 2" y1="height-5" x2="width - 2" y2="height-4"/>
		<line color="Border" x1="width - 3" y1="height-3" x2="width - 3" y2="height-3"/>
		<line color="Border" x1="width - 4" y1="height-2" x2="width - 5" y2="height-2"/>

	</draw_ops>

	<draw_ops name="outline">

		<rectangle color="Border" x="0" y="0" width="width - 1" height="height - 1"/>
		<line color="BorderDarkest" x1="0" y1="0" x2="width - 1" y2="0"/>

		<!-- highlights Top & Corners -->
		<tint color="Highlight" alpha="1.0" x="5" y="1" width="width-10" height="1"/>
		<tint color="Highlight" alpha="0.5" x="3" y="2" width="2" height="1"/>
		<tint color="Highlight" alpha="0.5" x="width-5" y="2" width="2" height="1"/> 

	</draw_ops>


<!-- Titlebar shading -->

	<draw_ops name="top_gradient">
		<gradient type="vertical" x="0" y="0" width="width-1" height="16">
			<color value="shade/gtk:bg[NORMAL]/1.03"/>
			<color value="gtk:bg[NORMAL]"/>
		</gradient>
	</draw_ops>


<!-- Window formats -->

	<draw_ops name="rounded_single" >
		<include name="top_gradient" />
		<include name="corners_rounded_top" />
		<include name="outline" />
	</draw_ops>

	<draw_ops name="rounded_double" >
		<include name="top_gradient" />
		<include name="corners_rounded_top" />
		<include name="corners_rounded_bottom" />
		<include name="outline" />
	</draw_ops>

	<draw_ops name="rounded_none" >
		<include name="top_gradient" />
		<include name="outline" />
	</draw_ops>

	<draw_ops name="square" >
		<include name="top_gradient" />
		<tint color="Highlight" alpha="1.0" x="1" y="0" width="width" height="1"/>
	</draw_ops>

<!-- Title text -->

