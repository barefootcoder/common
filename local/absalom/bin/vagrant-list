#! /bin/bash

cd $CEROOT

echo -e "\nExisting boxes:\n"
vagrant box list | grep -v '^Loading '

echo -e "\n\nRunning instances:\n"
for box in $(VBoxManage list runningvms | cut -d_ -f2)
do
	echo -e "$box:\n"
	CE_VAGRANT_BOX=$box vagrant status | perl -lne '$p = 1 if /^Current/; ++$p if /^$/; print "  $_" if $p && $p < 3'
done
echo -e "\n"
