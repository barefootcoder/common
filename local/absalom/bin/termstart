#!/bin/bash
. ~/bin/bash_funcs

ssh-add-if-necessary
ssh-add -l

if dropbox status | grep -q 'not running'
then
	if ! dropbox start
	then
		if yn "Reinstall dropbox?"
		then
			dropbox install force
		fi
	fi
fi

if ( screen -ls ||: ) | grep base
then
	cmd="screen -x base"
else
	cmd="screen -S base"
fi
music-player
myterm -s Absalom city-spires 125x50+7+30 $cmd
myterm -s Cibola cityofgold 125x50-0-24 ssh cibola
